<% if @errors %>
  <p class="errors"><%= @errors %></p>
<% end %>

<%= form_tag user_challenges_path(@user) do %>
  <p>
    <%= label_tag 'Challenger Email' %>
    <%= text_field_tag :challenger_email %>
  </p>
  <p>
    <%= label_tag 'Start Date' %>
    <%= date_field_tag :start_date %>
  </p>
  <p>
    <%= label_tag 'End Date' %>
    <%= date_field_tag :end_date %>
  </p>
  <%= submit_tag 'FIGHT!' %>
<% end %>