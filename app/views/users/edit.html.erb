<p>Edit Your Profile Info</p>

<% if session[:email_error] %>
  </h3><%= session[:email_error] %></h3>
<% end %>

<%= form_for @user do |f| %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :fullname %><br>
    <%= f.text_field :fullname %><br>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
  </p>
  <p>
    <%= f.submit "Update", :class => "button" %>
  </p>
<% end %>
